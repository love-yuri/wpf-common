<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LoveYuri.Controls">
    <!-- 加载中动画 -->
    <Style x:Key="LoadingSpinnerStyle" TargetType="Control">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Control">
                    <Grid x:Name="root">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock>
                                <Run Text="正在" />
                                <Run
                                    Text="{Binding RelativeSource={RelativeSource AncestorType=controls:ToolButton}, Path=Content}" />
                                <Run Text=" " />
                            </TextBlock>
                            <Grid>
                                <Ellipse Width="9" Height="9" Fill="White" Margin="2,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-8" Duration="0:0:0.4"
                                                        AutoReverse="True" RepeatBehavior="Forever" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <Grid>
                                <Ellipse Width="9" Height="9" Fill="White" Margin="2,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-8" Duration="0:0:0.4"
                                                        AutoReverse="True" RepeatBehavior="Forever"
                                                        BeginTime="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <Grid>
                                <Ellipse Width="9" Height="9" Fill="White" Margin="2,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-8" Duration="0:0:0.4"
                                                        AutoReverse="True" RepeatBehavior="Forever"
                                                        BeginTime="0:0:0.2" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 工具按钮样式 -->
    <Style TargetType="{x:Type controls:ToolButton}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12 10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <!-- 添加默认背景色属性 -->
        <Setter Property="Background" Value="#FF2196F3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ToolButton">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="6"
                            RenderTransformOrigin="0.5,0.5">

                        <!-- 增强阴影效果 -->
                        <Border.Effect>
                            <DropShadowEffect x:Name="shadowEffect"
                                              BlurRadius="10"
                                              ShadowDepth="3"
                                              Opacity="0.4"
                                              Color="#404040" />
                        </Border.Effect>

                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                                <TranslateTransform x:Name="translateTransform" Y="0" />
                            </TransformGroup>
                        </Border.RenderTransform>

                        <!-- 持续悬浮动画 -->
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 微妙的阴影变化 -->
                                        <DoubleAnimation
                                            Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="ShadowDepth"
                                            From="3" To="5" Duration="0:0:2"
                                            AutoReverse="True" RepeatBehavior="Forever">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- 光泽效果 -->
                                        <DoubleAnimation
                                            Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0.4" To="0.6" Duration="0:0:2"
                                            AutoReverse="True" RepeatBehavior="Forever">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>

                        <Grid Height="{TemplateBinding Height}">
                            <!-- 正常内容 -->
                            <ContentPresenter x:Name="normalContent"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                <ContentPresenter.RenderTransform>
                                    <TranslateTransform x:Name="contentTransform" X="0" Y="0" />
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>

                            <!-- 加载中动画 -->
                            <Control x:Name="loadingSpinner"
                                     Style="{StaticResource LoadingSpinnerStyle}"
                                     Visibility="Collapsed"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 加载状态 -->
                        <Trigger Property="IsLoading" Value="True">
                            <Setter TargetName="normalContent" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="loadingSpinner" Property="Visibility" Value="Visible" />
                            <Setter Property="IsEnabled" Value="False" />
                        </Trigger>

                        <!-- 鼠标悬停动画 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 增强悬浮效果 -->
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.05" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.05" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- 增强阴影 -->
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="15" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="ShadowDepth"
                                                         To="6" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.7" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="10" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="ShadowDepth"
                                                         To="3" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.4" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- 点击动画 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.95" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.95" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="contentTransform"
                                                         Storyboard.TargetProperty="Y"
                                                         To="1" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="5" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="ShadowDepth"
                                                         To="1" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="contentTransform"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         To="10" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                                         Storyboard.TargetProperty="ShadowDepth"
                                                         To="3" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
