<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:LoveYuri.Components">

    <!-- 加载中动画 -->
    <Style x:Key="LoadingSpinnerStyle" TargetType="Control">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Control">
                    <Grid x:Name="root">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock>
                                <Run Text="正在" />
                                <Run
                                    Text="{Binding RelativeSource={RelativeSource AncestorType=components:ToolButton}, Path=Content}" />
                                <Run Text=" " />
                            </TextBlock>
                            <Grid>
                                <Ellipse Width="9" Height="9" Fill="White" Margin="2,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-8" Duration="0:0:0.4"
                                                        AutoReverse="True" RepeatBehavior="Forever" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <Grid>
                                <Ellipse Width="9" Height="9" Fill="White" Margin="2,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-8" Duration="0:0:0.4"
                                                        AutoReverse="True" RepeatBehavior="Forever"
                                                        BeginTime="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <Grid>
                                <Ellipse Width="9" Height="9" Fill="White" Margin="2,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="0" To="-8" Duration="0:0:0.4"
                                                        AutoReverse="True" RepeatBehavior="Forever"
                                                        BeginTime="0:0:0.2" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 工具按钮样式 -->
    <Style TargetType="{x:Type components:ToolButton}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12 10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="components:ToolButton">
                    <Border x:Name="border"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="6"
                        RenderTransformOrigin="0.5,0.5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF2196F3" Offset="0" x:Name="gradientStop1" />
                                <GradientStop Color="#FF1976D2" Offset="1" x:Name="gradientStop2" />
                            </LinearGradientBrush>
                        </Border.Background>

                        <Border.Effect>
                            <DropShadowEffect x:Name="shadowEffect" BlurRadius="8" ShadowDepth="2"
                                Opacity="0.3" Color="#404040" />
                        </Border.Effect>

                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                                <TranslateTransform x:Name="translateTransform" Y="0" />
                            </TransformGroup>
                        </Border.RenderTransform>

                        <Grid Height="{TemplateBinding Height}">
                            <!-- 正常内容 -->
                            <ContentPresenter x:Name="normalContent" HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <ContentPresenter.RenderTransform>
                                    <TranslateTransform x:Name="contentTransform" X="0" Y="0" />
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>

                            <!-- 加载中动画 -->
                            <Control x:Name="loadingSpinner" Style="{StaticResource LoadingSpinnerStyle}"
                                Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 加载状态 -->
                        <Trigger Property="IsLoading" Value="True">
                            <Setter TargetName="normalContent" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="loadingSpinner" Property="Visibility" Value="Visible" />
                            <Setter Property="IsEnabled" Value="False" />
                        </Trigger>

                        <!-- 鼠标悬停动画 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="gradientStop1"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF42A5F5" Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetName="gradientStop2"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF1E88E5" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1.03" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1.03" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="BlurRadius"
                                            To="12" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="ShadowDepth"
                                            To="3" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.4" Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="gradientStop1"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF2196F3" Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetName="gradientStop2"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF1976D2" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="BlurRadius"
                                            To="8" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="ShadowDepth"
                                            To="2" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.3" Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- 点击动画 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="gradientStop1"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF0D47A1" Duration="0:0:0.1" />
                                        <ColorAnimation Storyboard.TargetName="gradientStop2"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF1565C0" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="0.97" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="0.97" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="contentTransform"
                                            Storyboard.TargetProperty="Y"
                                            To="1" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="BlurRadius"
                                            To="4" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="ShadowDepth"
                                            To="1" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="gradientStop1"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF2196F3" Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetName="gradientStop2"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF1976D2" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="contentTransform"
                                            Storyboard.TargetProperty="Y"
                                            To="0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="BlurRadius"
                                            To="8" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="shadowEffect"
                                            Storyboard.TargetProperty="ShadowDepth"
                                            To="2" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
