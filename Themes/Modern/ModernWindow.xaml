    </Style>

    <!-- 更新后的 ModernWindow 样式，在标题左侧添加菜单按钮 -->
    <Style TargetType="{x:Type modern:ModernWindow }">
        <Setter Property="Icon" Value="{StaticResource DefaultIcon}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type modern:ModernWindow }">
                    <!-- 主体布局 -->
                    <Border Padding="{TemplateBinding Margin}">
                        <Grid x:Name="PART_NotificationGrid">
                            <!-- 设置背景为蓝白渐变 -->
                            <Grid.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="White" Offset="0" />
                                    <GradientStop Color="#c7dcee" Offset="1" />
                                </LinearGradientBrush>
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" /> <!-- 顶栏 -->
                                <RowDefinition Height="*" />  <!-- 内容区 -->
                            </Grid.RowDefinitions>

                            <!-- 顶栏 -->
                            <Border Grid.Row="0" Background="{TemplateBinding TopbarBackgroundColor}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- 左侧菜单和标题区域 -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0"
                                        VerticalAlignment="Center">

                                        <!-- 菜单按钮 -->
                                        <Button x:Name="PART_ToolbarMenuButton"
                                            Command="{Binding ToolbarMenuClickCommand, RelativeSource={RelativeSource AncestorType=modern:ModernWindow }}"
                                            Style="{StaticResource MenuButtonStyle}"
                                            Content="☰"
                                            FontSize="18"
                                            Margin="0,0,2,0"
                                            ToolTip="应用菜单"
                                            ContextMenu="{TemplateBinding ToolbarMenu}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                        </Button>

                                        <!-- 应用程序标题 -->
                                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Foreground="White" FontSize="17"
                                            FontWeight="700" VerticalAlignment="Center">
                                            <TextBlock.Effect>
                                                <DropShadowEffect ShadowDepth="1" Direction="330" Color="#80000000"
                                                                BlurRadius="2" Opacity="0.2"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- 窗口控制按钮 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Width="36" Height="40"
                                            x:Name="TopMostButton"
                                            Command="{Binding PinDownCommand, RelativeSource={RelativeSource AncestorType=modern:ModernWindow }}"
                                            Style="{StaticResource TopMostButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <Image x:Name="PART_PinDownIcon" Width="16" Height="16">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Source" Value="{StaticResource PinDownDrawingImage}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Topmost, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                                <Setter Property="Source" Value="{StaticResource PinDownedDrawingImage}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Button>
                                        <Button Width="46" Height="40"
                                            Command="{Binding MinimizeCommand, RelativeSource={RelativeSource AncestorType=modern:ModernWindow }}"
                                            Style="{StaticResource WindowControlButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <Path Data="M0,0 L10,0" Stroke="White" StrokeThickness="1"
                                                Stretch="Uniform" Width="10" />
                                        </Button>
                                        <Button Width="46" Height="40"
                                            Command="{Binding MaximizeCommand, RelativeSource={RelativeSource AncestorType=modern:ModernWindow }}"
                                            Style="{StaticResource WindowControlButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <Path Data="M0,0 L10,0 L10,10 L0,10 Z"
                                                x:Name="PART_MaximizeIcon"
                                                Stroke="White" StrokeThickness="1" Stretch="Uniform" Width="10" />
                                        </Button>
                                        <Button Width="46" Height="40"
                                            Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=modern:ModernWindow }}"
                                            Style="{StaticResource CloseButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <Path Data="M0,0 L10,10 M0,10 L10,0" Stroke="White" StrokeThickness="1"
                                                Stretch="Uniform" Width="10" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- 具体内容 -->
                            <Border Grid.Row="1" Padding="6">
                                <!-- 主内容区域 -->
                                <ContentPresenter Content="{TemplateBinding Content}" />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
