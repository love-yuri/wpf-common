<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:notification="clr-namespace:LoveYuri.Core.Notification">
    <Style TargetType="{x:Type notification:SuccessNotificationMessage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type notification:SuccessNotificationMessage}">
                    <Border
                        CornerRadius="6"
                        Background="#f0f9eb"
                        BorderBrush="#e1f3d8"
                        BorderThickness="1"
                        Padding="15,10" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 图标 -->
                            <svgc:SvgViewbox
                                Width="16"
                                Height="16"
                                Source="/Assets/Svg/true.svg"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center" />

                            <!-- 消息内容 -->
                            <TextBlock
                                x:Name="MessageText"
                                FontFamily="Microsoft YaHei"
                                Margin="0 0 20 0"
                                Grid.Column="1"
                                Text="{Binding RelativeSource={RelativeSource AncestorType=notification:SuccessNotificationMessage}, Path=Message}"
                                Foreground="#67c23a"
                                FontSize="14"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap" />

                            <!-- 关闭按钮 -->
                            <Button
                                Grid.Column="2"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=notification:SuccessNotificationMessage}, Path=CloseCommand}"
                                VerticalAlignment="Center">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border Background="Transparent">
                                            <svgc:SvgViewbox Height="16" Width="16" Source="/Assets/Svg/close.svg" />
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
