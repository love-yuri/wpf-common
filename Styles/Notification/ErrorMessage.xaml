<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notification="clr-namespace:LoveYuri.Core.Notification"
    mc:Ignorable="d">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/love-yuri;component/Styles/Svg.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="notification:ErrorNotificationMessage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border
                        CornerRadius="6"
                        Background="#fef0f0"
                        BorderBrush="#fde2e2"
                        BorderThickness="1"
                        Padding="15,10" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 图标 -->
                            <Image
                                Width="16"
                                Height="16"
                                Source="{StaticResource ErrorDrawingImage}"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center" />

                            <!-- 消息内容 -->
                            <TextBlock
                                x:Name="MessageText"
                                FontFamily="Microsoft YaHei"
                                Margin="0 0 20 0"
                                Grid.Column="1"
                                Text="{Binding RelativeSource={RelativeSource AncestorType=notification:ErrorNotificationMessage}, Path=Message}"
                                Foreground="#f56c6c"
                                FontSize="14"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap" />

                            <!-- 关闭按钮 -->
                            <Button
                                Grid.Column="2"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=notification:ErrorNotificationMessage}, Path=CloseCommand}"
                                VerticalAlignment="Center">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border Background="Transparent">
                                            <Image Height="16" Width="16" Source="{StaticResource CloseErrorDrawingImage}" />
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
